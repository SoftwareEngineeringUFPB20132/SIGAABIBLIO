<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_softblue"
    android:id="@+id/login_body" >
	 <!-- android:background="#2932aa"-->
	<LinearLayout
	    android:id="@+id/login_head"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/background_azul1"
	    android:gravity="center"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/brasao_ufpb" />

	    <TextView
	        android:id="@+id/textViewSituacaoUsuario1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/nomeSistema"
	        android:textColor="@android:color/white"
	        android:textSize="25dp" />
	</LinearLayout>
  	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	<TextView
	    android:id="@+id/login_subheader"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_margin="10dp"
	    android:text="Informe seu cadastro no SIGAA UFPB"
		android:gravity="center"
	    android:textSize="20dp"
	    android:background="@drawable/background_azul2" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center" >

		<TextView
		    android:id="@+id/textViewDataRenovacao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="UsuÃ¡rio: " 
		    android:textSize="20dp"
		    android:layout_margin="10dp"/>

		<EditText
		    android:id="@+id/editTextLoginUsuario"
		    android:layout_width="206dp"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:singleLine="true" >

		</EditText>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center" >

		<TextView
		    android:id="@+id/textViewDataDevolucao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Senha:"
		    android:textSize="20dp"
		    android:layout_margin="7dp"
		     />

		<EditText
		    android:id="@+id/editTextSenhaUsuario"
		    android:layout_width="206dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="22dp"
		    android:ems="10"
		    android:inputType="textPassword"
		    android:singleLine="true" >

		    <requestFocus />
		</EditText>
	    
	</LinearLayout>

	<Button
	    android:id="@+id/consultarHistorico"
	    android:layout_width="230dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="50dp"
	    android:text="Entrar" />
  </LinearLayout>
	</ScrollView>
  	    
  	    
</LinearLayout>