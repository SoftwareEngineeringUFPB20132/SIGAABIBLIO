<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_softblue"
    android:id="@+id/login_body" >
	 <!-- android:background="#2932aa"-->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:background="@drawable/background_azul1"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:id="@+id/login_header" >

	    <TextView
	        android:id="@+id/textViewTitleDadostitulo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Registro de Renovações"
	        android:textColor="@android:color/white"
	        android:textSize="25dp" />
	</LinearLayout>

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	        <ListView
	            android:id="@+id/listViewDadosTitulo"
	            android:layout_width="match_parent"
	            android:layout_height="412dp" 
	            android:focusable="false"
				android:focusableInTouchMode="false"
				android:clickable="false"			
				android:listSelector="@android:color/transparent"		            
	            >
	        </ListView>

	        
	        
	    </LinearLayout>
	</ScrollView>
	
</LinearLayout>