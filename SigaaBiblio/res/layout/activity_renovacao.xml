<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_softblue"
    android:id="@+id/login_body" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:background="@drawable/background_azul1"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:id="@+id/login_header"
	     >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/header_renovacao"
	        android:textColor="@android:color/white"
	        android:textSize="25dp"
	         />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
		android:orientation="horizontal"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/listViewResultados"
            android:layout_width="wrap_content"
            android:layout_height="337dp" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/renovarEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_renovacao"
            android:onClick="renovar" />

    </LinearLayout>

</LinearLayout>