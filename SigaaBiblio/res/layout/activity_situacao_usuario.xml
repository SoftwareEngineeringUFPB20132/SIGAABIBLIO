<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/background_softblue"
	    tools:context=".SituacaoUsuarioActivity"
	    android:id="@+id/login_body">
	    	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="70dp"
		    android:background="@drawable/background_azul1"
		    android:gravity="center"
		    android:orientation="horizontal"
		    android:id="@+id/login_header">
	        
	        <TextView
	            android:id="@+id/textViewTitleSituacao"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/titleActivitySituacaoUsuario"
	            android:textColor="@android:color/white"
	            android:textSize="25dp" />
	        
	    </LinearLayout>
	    
	   
	
	   <TextView
	       android:id="@+id/textViewSituacaoUsuario1"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:text="Total de Empréstimos em Aberto: N"
	       android:layout_margin="5dp"
	       android:gravity="center"
	       android:textSize="15dp"/>

	   <ViewFlipper
	       android:id="@+id/viewFlipper1"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" 
	       android:animationCache="true"
	       >

			
	   </ViewFlipper>
	
		<TextView
		    android:id="@+id/textViewSituacaoUsuario2"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center"
		    android:text="Pode Realizar Empréstimos: SIM"
		    android:textStyle="bold"
		    android:textSize="15dp" />
		

</LinearLayout>


